# VSS 开发环境配置
# ==========================================
# 继承 .env 基础配置，覆盖开发环境特定设置

# ===========================================
# 开发环境标识
# ===========================================
NODE_ENV=development
SPRING_PROFILES_ACTIVE=dev

# ===========================================
# 开发端口配置（避免与生产环境冲突）
# ===========================================
FRONTEND_PORT=3001
BACKEND_PORT=3003
NGINX_PORT=8080

# 开发工具端口
MAIL_PORT=1025
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
ADMINER_PORT=8081
GRAFANA_PORT=3004

# ===========================================
# 开发数据库配置
# ===========================================
DB_TYPE=h2
DB_HOST=localhost
DB_PORT=5433
DB_NAME=vss_dev_db
H2_CONSOLE_ENABLED=true

# ===========================================
# 开发 API 配置
# ===========================================
API_BASE_URL=http://localhost:${BACKEND_PORT}
API_TIMEOUT=60000
API_RATE_LIMIT=1000

# ===========================================
# 开发日志配置
# ===========================================
LOG_LEVEL=debug
LOG_ROOT_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# ===========================================
# 开发安全配置
# ===========================================
DB_NAME=vss_dev_db
DB_USERNAME=dev_user
DB_PASSWORD=dev_password

# 开发 API 配置
API_BASE_URL=http://localhost:3003
VITE_API_BASE_URL=${API_BASE_URL}/api/v1

# 开发环境特性
DEV_HOT_RELOAD=true
DEV_SOURCE_MAP=true
DEV_MOCK_API=true
LOG_LEVEL=debug

# CORS 配置（开发环境更宽松）
CORS_ORIGIN=*

# 开发用的弱密钥（不要在生产环境使用）
JWT_SECRET=dev-jwt-secret-key
SESSION_SECRET=dev-session-secret
