# VSS 开发环境配置
# 支持 Docker + Nginx + React 热更新

# =============================================================================
# 应用基础配置
# =============================================================================
APP_NAME=vss
NODE_ENV=development
DOCKER_NETWORK=vss-network
DOCKER_SUBNET=172.20.0.0/16

# =============================================================================
# 端口配置 - 开发环境
# =============================================================================
# Nginx 代理端口
NGINX_PORT=80
DEV_TOOLS_PORT=8080

# 服务端口
BACKEND_PORT=3000
FRONTEND_DEV_PORT=3000

# 数据库端口
DB_PORT=5432
REDIS_PORT=6379

# =============================================================================
# 前端热更新配置
# =============================================================================
VITE_HMR_HOST=localhost
VITE_HMR_PORT=24678
VITE_API_BASE_URL=/api
VITE_WS_URL=/ws

# 前端应用配置
VITE_APP_TITLE=VSS Vision Platform (Dev)
VITE_APP_VERSION=1.0.0-dev
VITE_APP_DESCRIPTION=VSS Vision Platform Development

# =============================================================================
# 数据库配置 (开发环境)
# =============================================================================
DB_TYPE=postgres
DB_HOST=database
DB_NAME=vss_development_db
DB_USERNAME=dev_user
DB_PASSWORD=dev_password

# =============================================================================
# API 配置
# =============================================================================
API_PREFIX=/api/v1
API_TIMEOUT=30000
API_RATE_LIMIT=100

# =============================================================================
# 安全配置 (开发环境)
# =============================================================================
JWT_SECRET=dev_jwt_secret_key_for_development_only
CORS_ORIGIN=http://localhost

# =============================================================================
# 日志配置 (开发环境)
# =============================================================================
LOG_LEVEL=debug
LOG_ROOT_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# =============================================================================
# Spring Boot 配置
# =============================================================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=3000
