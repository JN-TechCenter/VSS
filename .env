# VSS 生产环境配置
# 数据持久化配置文件
# 创建时间: 2025-07-22

# ======================
# 数据库配置
# ======================
DB_TYPE=postgres
DB_NAME=vss_production_db
DB_USERNAME=prod_user
DB_PASSWORD=VSSProd2025!
DB_MAX_CONNECTIONS=200
DB_CONNECTION_TIMEOUT=15000

# ======================
# Redis 缓存配置
# ======================
REDIS_PASSWORD=VSSRedis2025!
REDIS_PORT=6379
REDIS_DB=0

# ======================
# JWT 安全配置
# ======================
JWT_SECRET=VSSJWTSecret2025!SuperSecure!ChangeThis!

# ======================
# 应用端口配置
# ======================
BACKEND_PORT=3002
YOLO_PORT=8084
NET_PORT=8085
DATA_ANALYSIS_PORT=8086
SCRIPT_ORCHESTRATION_PORT=8087

# ======================
# 前端构建配置
# ======================
VITE_API_BASE_URL=http://localhost:3002/api/v1
VITE_APP_TITLE=VSS Vision Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=VSS 视觉智能平台

# ======================
# Docker网络配置
# ======================
DOCKER_NETWORK=vss-network

# ======================
# 日志级别配置
# ======================
LOG_LEVEL=info
YOLO_LOG_LEVEL=INFO
NET_LOG_LEVEL=Information
DATA_ANALYSIS_LOG_LEVEL=INFO

# ======================
# YOLO模型配置
# ======================
MODEL_TYPE=yolov8
MODEL_SIZE=n
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45
DEVICE=cpu
BATCH_SIZE=1
IMG_SIZE=640

# ======================
# 生产环境优化配置
# ======================
NODE_ENV=production
FLASK_ENV=production
ASPNET_ENVIRONMENT=Production
SPRING_PROFILES_ACTIVE=prod
PROD_OPTIMIZE=true
PROD_GZIP=true
