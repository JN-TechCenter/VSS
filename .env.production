# VSS 生产环境配置
# ==========================================
# 继承 .env 基础配置，覆盖生产环境特定设置

# ===========================================
# 生产环境标识
# ===========================================
NODE_ENV=production
SPRING_PROFILES_ACTIVE=prod

# ===========================================
# 生产端口配置
# ===========================================
FRONTEND_PORT=3000
BACKEND_PORT=3002
NGINX_PORT=8080

# 工具端口
MAIL_PORT=587
ADMINER_PORT=8090
GRAFANA_PORT=3005

# ===========================================
# 生产数据库配置
# ===========================================
DB_TYPE=postgres
DB_HOST=${DB_HOST:-database}
DB_PORT=5432
DB_NAME=${DB_NAME:-vss_production_db}
DB_USERNAME=${DB_USERNAME:-prod_user}
DB_PASSWORD=${DB_PASSWORD:-prod_password}
DB_MAX_CONNECTIONS=50
DB_CONNECTION_TIMEOUT=10000

# ===========================================
# 生产 API 配置
# ===========================================
API_BASE_URL=https://api.vss-platform.com
API_TIMEOUT=15000
API_RATE_LIMIT=50
VITE_API_BASE_URL=${API_BASE_URL}/api/v1

# ===========================================
# 生产环境特性
# ===========================================
PROD_OPTIMIZE=true
PROD_GZIP=true
PROD_CACHE_CONTROL=public,max-age=31536000

# ===========================================
# 生产日志配置
# ===========================================
LOG_LEVEL=warn
LOG_ROOT_LEVEL=error
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=false

# ===========================================
# 生产安全配置
# ===========================================
JWT_SECRET=${JWT_SECRET}
SESSION_SECRET=${SESSION_SECRET}
CORS_ORIGIN=https://vss-platform.com

# SSL 配置
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/vss.crt
SSL_KEY_PATH=/etc/ssl/private/vss.key
